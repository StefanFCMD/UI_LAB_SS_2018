<!--
The TabView component provides a simple way to navigate between different views by
tapping on some of the tabs or by swiping between the views.
Learn more about the TabView component in this documentation article:
http://docs.nativescript.org/cookbook/ui/tab-view
-->
<TabView selectedIndexChanged="onSelectedIndexChanged" androidTabsPosition="bottom">
    <TabViewItem title="Appointments" ios:iconSource="res://tabIcons/home" android:iconSource="res://home">
        <Frame defaultPage="appointments/appointments-page"></Frame>
    </TabViewItem>

    <TabViewItem title="Customers" ios:iconSource="res://tabIcons/browse" android:iconSource="res://browse">
        <Frame defaultPage="customers/customer-page"></Frame>
    </TabViewItem>

    <TabViewItem title="Map" ios:iconSource="res://tabIcons/browse" android:iconSource="res://browse">
        <Frame defaultPage="map/map-page"></Frame>
    </TabViewItem>

    <TabViewItem title="Warehouse" ios:iconSource="res://tabIcons/browse" android:iconSource="res://browse">
        <Frame defaultPage="warehouse/warehouse-page"></Frame>
    </TabViewItem>

    <TabViewItem title="Notes" ios:iconSource="res://tabIcons/browse" android:iconSource="res://browse">
        <Frame defaultPage="notes/notes-page"></Frame>
    </TabViewItem>
</TabView>
